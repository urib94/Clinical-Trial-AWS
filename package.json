{
  "name": "clinical-trial-platform",
  "version": "1.0.0",
  "description": "Healthcare clinical trial platform with secure data management",
  "main": "backend/server/app.js",
  "scripts": {
    "test": "jest",
    "test:unit": "NODE_ENV=test jest --testPathPattern=unit",
    "test:integration": "NODE_ENV=test jest --testPathPattern=integration",
    "test:security": "NODE_ENV=test jest --testPathPattern=security",
    "test:performance": "NODE_ENV=test jest --testPathPattern=performance",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "dev:setup": "node scripts/setup-local.js",
    "dev:db": "docker-compose up postgres redis pgadmin -d",
    "dev:services": "docker-compose up -d",
    "dev:server": "nodemon backend/server/app.js",
    "dev:seed": "node backend/database/seed-data.js seed",
    "dev:reset": "node backend/database/seed-data.js reset",
    "dev:migrate": "node backend/database/migrate.js up",
    "dev:migrate-status": "node backend/database/migrate.js status",
    "dev:migrate-rollback": "node backend/database/migrate.js down",
    "dev:clean": "docker-compose down -v && docker system prune -f",
    "start": "node backend/server/app.js",
    "lint": "eslint backend/",
    "lint:fix": "eslint backend/ --fix",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "db:backup": "node scripts/backup-db.js",
    "db:restore": "node scripts/restore-db.js",
    "docs:setup": "node scripts/setup-api-docs.js",
    "docs:test": "node scripts/test-api-docs.js",
    "docs:validate": "node -e \"const YAML = require('yamljs'); const spec = YAML.load('./docs/api/openapi.yaml'); console.log('OpenAPI spec is valid:', spec.info.title);\""
  },
  "keywords": [
    "clinical-trial",
    "healthcare",
    "medical-research",
    "patient-data",
    "hipaa",
    "aws",
    "serverless",
    "nodejs",
    "postgresql"
  ],
  "author": "Clinical Trial Platform Team",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "connect-redis": "^7.1.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3",
    "qrcode": "^1.5.3",
    "redis": "^4.6.10",
    "sanitize-html": "^2.11.0",
    "sharp": "^0.32.6",
    "speakeasy": "^2.0.0",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.5",
    "@types/supertest": "^6.0.3",
    "axios-mock-adapter": "^2.1.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "eslint-config-node": "^4.1.0",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^29.7.0",
    "jest-mock-axios": "^4.8.0",
    "nodemon": "^3.0.2",
    "postgresql-client": "^2.13.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "backend/**/*.js",
      "!backend/database/seed-data.js",
      "!backend/server/app.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:security/recommended"
    ],
    "env": {
      "node": true,
      "es2022": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "off",
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "security/detect-object-injection": "off",
      "security/detect-non-literal-fs-filename": "off"
    }
  },
  "nodemonConfig": {
    "watch": [
      "backend/"
    ],
    "ext": "js,json",
    "ignore": [
      "node_modules/",
      "uploads/",
      "logs/",
      "coverage/"
    ],
    "env": {
      "NODE_ENV": "development"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/clinical-trial-platform/backend.git"
  },
  "bugs": {
    "url": "https://github.com/clinical-trial-platform/backend/issues"
  },
  "homepage": "https://github.com/clinical-trial-platform/backend#readme"
}
