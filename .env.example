# Clinical Trial Platform - Local Development Environment Configuration

# Application Environment
NODE_ENV=development
PORT=3001

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=clinical_trial_dev
DB_USER=api_user
DB_PASSWORD=api_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=dev_redis_password

# JWT Configuration
JWT_SECRET=dev-jwt-secret-change-in-production-2024
JWT_EXPIRES_IN=30m
REFRESH_TOKEN_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=dev-session-secret-change-in-production-2024

# Encryption Configuration
ENCRYPTION_KEY=dev-encryption-key-change-in-production-2024
PII_ENCRYPTION_KEY=dev-pii-encryption-key-change-in-production-2024

# File Upload Configuration
UPLOAD_MAX_SIZE=104857600
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp,video/mp4,video/mpeg,audio/mpeg,audio/wav,application/pdf,text/plain

# MinIO Configuration (S3 Simulation)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=clinical-trial-uploads

# Email Configuration (Development - Console logging)
EMAIL_PROVIDER=console
EMAIL_FROM=noreply@clinical-trial.local
EMAIL_FROM_NAME=Clinical Trial Platform

# SMS Configuration (Development - Console logging)
SMS_PROVIDER=console
SMS_FROM=Clinical Trial Platform

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# Audit Logging
AUDIT_LOG_LEVEL=info
AUDIT_LOG_SENSITIVE_OPERATIONS=true

# Development Features
DEV_SEED_DATABASE=true
DEV_MOCK_EXTERNAL_SERVICES=true
DEV_SKIP_EMAIL_VERIFICATION=true
DEV_SKIP_SMS_VERIFICATION=true

# API Documentation
API_DOCS_ENABLED=true
API_DOCS_PATH=/api/docs

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Virus Scanning (Development - Simulated)
VIRUS_SCAN_ENABLED=false
VIRUS_SCAN_PROVIDER=mock

# Background Jobs (Development - Disabled)
BACKGROUND_JOBS_ENABLED=false

# Monitoring and Logging
LOG_LEVEL=debug
LOG_FORMAT=combined
LOG_FILE_ENABLED=false

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30

# Feature Flags
FEATURE_MFA_REQUIRED=false
FEATURE_FILE_ENCRYPTION=false
FEATURE_AUDIT_DETAILED=true
FEATURE_PERFORMANCE_MONITORING=true

# Development Database Seeding
SEED_ORGANIZATIONS=3
SEED_PHYSICIANS=3
SEED_PATIENTS=3
SEED_STUDIES=3
SEED_QUESTIONNAIRES=3